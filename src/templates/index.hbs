<!-- src/templates/index.hbs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{title}}</title>
</head>
<body>

{{> header }}

<main class="container my-5 hero p-5 rounded-5">
  <div class="row">
    <div class="col-md-8">
      <h1 class="display-4 text-white">{{heroTitle}}</h1>
      <p class="lead text-white">{{heroText}}</p>
      <a href="#" class="btn btn-primary btn-lg">{{ctaText}}</a>
    </div>
    <div class="col-md-4">
      <img src="images/startup.png" class="img-fluid rounded" alt="Bootstrap Logo">
    </div>
  </div>
</main>

{{> footer }}

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>